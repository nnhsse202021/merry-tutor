<html>
    <head>
        <%- include("head.ejs") %>
    </head>
    <body>
        <h1>Merry Tutor Session Summary</h1>
        <form method="POST">
            <div class="form-group">
                <label class="form-label" for="session-date">Session Date:</label>
                <% console.log(typeof formData != 'undefined' ? formData : "no data") %>
                <input class="form-control" type="date" name="session-date" id="session-date" value="<%= typeof formData != 'undefined' ? formData['session-date'] : '' %>" required><br>
            </div>
            <div class="form-group">
                <label class="form-label" for="tutor-name">Tutor Name:</label>
                <input class="form-control" type="text" id ="tutor-name" name="tutor-name"  placeholder="Last, First" aria-describedby="tutor-name-help" v
                alue="<%= typeof formData != 'undefined' ? formData['tutor-name'] : '' %>" required>
                <small id="tutor-name-help" class="form-text text-muted">YOU are the tutor. Please put your full name.</small><br>
            </div>
            <div class="form-group">
                <label class="form-label" for="tutee-name">Tutee Name:</label>
                <input class="form-control" type="text" id ="tutee-name" name="tutee-name" placeholder="Last, First" aria-describedby="tutee-name-help" 
                value="<%= typeof formData != 'undefined' ? formData['tutee-name'] : '' %>"  required>
                <small id="tutee-name-help" class="form-text text-muted">The person you tutored is the tutee. Please put their full name below.</small><br>
            </div>
            <div class="form-group">
                <label class="form-label" for="shadow-name">Shadowing Tutor:</label>
                <input class="form-control" type="text" id="shadow-name" name="shadow-name" value="<%= typeof formData != 'undefined' ? formData['shadow-name'] : '' %>" placeholder="Last, First"><br>
            </div>
            <div class="form-group">
                <label class="form-label" for="tutee-grade">Tutee Grade</label>
                <select class=form-control" id="tutee-grade" name="tutee-grade" required>
                    <option selected>No grade selected</option>
                    <option value="K">K</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                    <option value="12">12</option>
                </select><br>
                <% if (typeof formData != 'undefined') {%>
                    <script>
                        document.querySelector("#tutee-grade").value = <%= formData['tutee-grade'] %> || document.querySelector("#tutee-grade").value
                    </script>
                <% } %>
            </div>
            
            <div class="form-check">
                <label>Subject(s) Tutored</label><br>
                <input class="form-check-input" type="checkbox" name="subject1" id="subject1" value="math">
                <label class="form-check-label" for="subject1">Math</label><br>
                <input class="form-check-input" type="checkbox" name="subject2" id="subject2" value="science">
                <label class="form-check-label" for="subject2" >Science</label><br>
                <input class="form-check-input" type="checkbox" name="subject3" id="subject3" value="social-studies">
                <label class="form-check-label" for="subject3">Social Studies</label><br>
                <input class="form-check-input" type="checkbox" name="subject4" id="subject4" value="english">
                <label class="form-check-label" for="subject4">English</label><br>
            </div>
            <!-- <input type="checkbox" name="subject5" id="subject5" value="Other"> -->
            <% if (typeof formData != 'undefined') {%>
                <script>
                    document.querySelector("#subject").value = <%= formData['subject'] %> || document.querySelector("#subject").value
                </script>
            <% } %>

            <div class="form-group">
                <label class="form-label" for="what-they-learned" value="<%= typeof formData != 'undefined' ? formData['what-they-learned'] : '' %>">What did the tutee learn during the session?</label><br>
                <input class="form-control" type="text" name="what-they-learned" id="what-they-learned" value="<%= typeof formData != 'undefined' ? formData['what-they-learned'] : '' %>"><br>
                <small id="what-they-learned-help" class="form-text text-muted"></small>
            </div>
            <div class="form-group">
                <label class="form-label" for="at-home-suggestion">What should the tutee work on before the next session as homework</label><br>
                <input class="form-control" type="text" name="at-home-suggestion" id="at-home-suggestion" value="<%= typeof formData != 'undefined' ? formData['at-home-suggestion'] : '' %>"><br>
            </div>
            <div class="form-group">
                <label class="form-label" for="next-session-suggestion">What should the tutee work on during the next session?</label><br>
                <input class="form-control" type="text" name="next-session-suggestion" id="next-session-suggestion" value="<%= typeof formData != 'undefined' ? formData['next-session-suggestion'] : '' %>" rows="3"><br>
            </div>
            
            <input type="submit" value="Submit">
        </form>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    </body>
</html>